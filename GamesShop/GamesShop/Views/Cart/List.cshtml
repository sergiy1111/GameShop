@model List<GamesShop.Models.Product>

@{
    double Price = 0;
}

@foreach (var Item in Model)
{
    <div class="col-12 row mt-2 m-0 p-0" style="border: 1px solid #f3ca20;">
        <img class="col-4 p-0 m-0" height="100" src="/Files/@Item.Files.First().FileName" />
        <div class="col-5 text-center">
            <p> @Item.ProductName</p>
            <p style="color: #f3ca20;">@Item.Price грн.</p>
        </div>
        <div class="col-3 d-flex align-items-lg-center align-content-center">
            <a href="~/Cart/DeleteFromList/@Item.Id" data-ajax-update="#Cart" data-ajax-mode="replace" data-ajax="true" class="btn btn-primary margin-auto"><ion-icon name="trash-outline"></ion-icon></a>
        </div>
    </div>
    {
        Price += Item.Price;
    }
}


<div class="col-12 row mt-2 m-0 p-0 bg-dark text-center" style="position: absolute; bottom: 10%; right: 0;">
    <p style="color: #f3ca20;">Загальна вартість: @Price грн.</p> 
</div>