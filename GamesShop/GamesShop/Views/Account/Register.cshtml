@model GamesShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Реєстрація";
}

    <div class="col-9 mt-5 bg-dark p-2 pt-5 pb-5 text-center" style="margin-left:40px; color: white; margin-left: auto; margin-right: auto;">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            <h2>@ViewBag.Title.</h2>
            @Html.AntiForgeryToken()
            <h4>Створенн нового облікового запису.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Login, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group mt-4">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group mt-4">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group mt-4">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group mt-5">
                <div class="col-md-offset-2 col-md-12">
                    <input type="submit" class="btn col-12 btn-primary" value="Реєстрація" />
                </div>
            </div>
        }

    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
