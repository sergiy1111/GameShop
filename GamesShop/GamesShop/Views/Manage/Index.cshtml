@model GamesShop.Models.IndexViewModel
@{
    ViewBag.Title = "Управление";
}

<div class="col-9 mt-5 bg-dark p-2 pt-5 pb-5 text-center" style="margin-left:40px; color: white; margin-left: auto; margin-right: auto;">

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        <h4>Зміна даних облікового запису</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Пароль:</dt>
            <dd>
                
                @if (Model.HasPassword)
                {
                    <a href="~/Manage/ChangePassword" class="btn-primary btn">Зміна паролю</a>
                }
                else
                {
                    @Html.ActionLink("Создать", "SetPassword")
                }
                
            </dd>
        
    </div>
</div>
