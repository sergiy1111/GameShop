@model GamesShop.Models.OperatingSystem

@{ 
    ModelState state = new ModelState();
}

@using (Ajax.BeginForm("Input", "OperatingSystem", new AjaxOptions { HttpMethod = "Post", OnSuccess = "PopUpHide(); Upd('/Manager/OperatingSystems')", UpdateTargetId = "PopUpContent" }, new { @class = "col-12 container" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="row">
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "col-12 text-danger" })
        <div class="mb-3 col-12">
            <label for="NameInput" class="form-label col-6">Name</label>
            <input type="text" name="Name" value="@Model.Name" class="form-control col-6" id="NameInput">
        </div>

        <div class="mb-3 col-12">
            <input value="Зберегти" type="submit" class="btn btn-primary col-12" />
        </div>
    </div>
}

<div class="container">
    <div class="mb-3 col-12">
        <button class="btn btn-primary col-12" onclick="PopUpHide();">Відмінити</button>
    </div>
</div>


