@model List<GamesShop.Models.Product>
    <div class="onload">

    </div>
    <div class="col-12">
        <a class="btn btn-primary col-12 mt-5" data-ajax="true" data-ajax-loading="#Loading" data-ajax-mode="replace" data-ajax-success="PopUpShow();" data-ajax-update="#PopUpContent" href="/Product/Input/-1">Add</a>
    </div>

    <table class="table table-dark">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Genre</th>
            <th>Release date</th>
            <th>Price</th>
            <th>Operations</th>
        </tr>
        @foreach (var Item in Model)
        {
            <tr>
                <td><img src="~/Files/@Item.Files.FirstOrDefault().FileName" width="230" /></td>
                <td>@Item.ProductName</td>
                <td>@foreach (var Category in Item.Categories) { @( Category.CategoryName + " ") }</td>
                <td>@Item.ReleaseDate.ToLongDateString()</td>
                <td>@Item.Price грн.</td>
                <td width="20%">
                    <a class="btn btn-primary col-12" data-ajax="true" data-ajax-loading="#Loading" data-ajax-mode="replace" data-ajax-success="PopUpShow();" data-ajax-update="#PopUpContent" href="/Product/Input/@Item.Id">Редагувати</a>
                    <a class="btn btn-primary col-12 mt-1" data-ajax="true" data-ajax-loading="#Loading" data-ajax-mode="replace" data-ajax-success="PopUpShow();" data-ajax-update="#PopUpContent" href="/Product/Delete/@Item.Id">Видалити</a>
                    <button class="btn btn-primary col-12 mt-1">Інформація</button>
                </td>
            </tr>
        }

    </table>
