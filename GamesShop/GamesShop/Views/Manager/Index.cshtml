
@{
    ViewBag.Title = "Index";
}
    <div class="row">
        <div class="pt-4 row pb-5 btn-danger mt-5" style="position: fixed; left: 0; width: 23%; padding: 20px;">
            @Ajax.ActionLink("Відеоігри", "Products", "Manager", new AjaxOptions {LoadingElementId = "Loading", UpdateTargetId = "Table", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary col-7 mt-5" })
            @Ajax.ActionLink("Жанри", "Categories", "Manager", new AjaxOptions { LoadingElementId = "Loading", UpdateTargetId = "Table", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary col-9 mt-5" })
            @Ajax.ActionLink("Розробники", "Developers", "Manager", new AjaxOptions { LoadingElementId = "Loading", UpdateTargetId = "Table", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary col-10 mt-5" })
            @Ajax.ActionLink("Видавництво", "Publishers", "Manager", new AjaxOptions { LoadingElementId = "Loading", UpdateTargetId = "Table", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary col-11 mt-5" })
            @Ajax.ActionLink("Операційні системи", "OperatingSystems", "Manager", new AjaxOptions { LoadingElementId = "Loading", UpdateTargetId = "Table", InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-primary col-12 mt-5" })
        </div>


        <div class="col-9 mt-5 btn-danger p-2 pt-5 pb-5 text-center" style="margin-left:40px; color: gold; margin-left: auto; margin-right: auto;">
            <div style="display: none; position: fixed;  color: #f3ca20; left: 0; width: 100%;" id="Loading">
                <div style="background-color: #3d3d3d; margin-left: auto; margin-right: auto; width: 50%;">
                    <p class="col-12 pt-3" >
                        Будь ласка зачекайте, йде завантаження
                    </p>
                    <ion-icon class="Loading mb-3 mt-3"  name="game-controller"></ion-icon>
                </div>
            </div>
            <div id="Table">
                <p class="mt-5">Нічого не вибрано</p>
            </div>
        </div>
    </div>

    <div id="PopUp" style=" background: rgba(0, 0, 0, 0.5); width: 100%; height: 100%; position: fixed  ; top: 0; left: 0; overflow-y: scroll; display: none;">
        <div  class="container mt-5">
            <div class="row">
                <div class="col-12 pt-4 pb-5 bg-dark mt-5" id="PopUpContent" style="color: white;">

                </div>
                <button class="col-1 offset-9 btn btn-primary" style="position: fixed; top: 10%;" onclick="PopUpHide();">✖</button>
            </div>
        </div>
    </div>

